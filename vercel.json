{
    "functions": {
        "api/**/*.ts": {
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "^/api/(.*)$",
            "dest": "/api/index.ts"
        },
        {
            "src": "^/health$",
            "dest": "/api/index.ts"
        },
        {
            "src": "^/send-email$",
            "dest": "/api/index.ts"
        }
    ]
}